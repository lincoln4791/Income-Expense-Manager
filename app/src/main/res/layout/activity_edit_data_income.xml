            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tv_dateTime_EditDataIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/demoDate"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_schedule"
        android:drawablePadding="10dp"
        app:layout_constraintStart_toStartOf="@+id/horizontalScrollView3_EditDataIncome"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView3_EditDataIncome" />

    <TextView
        android:id="@+id/tc_changeDate_AddIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/ChangeDate"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/horizontalScrollView3_AddIncome"
        app:layout_constraintTop_toTopOf="@+id/tv_dateTime_AddIncome"
        android:visibility="gone"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_save_EditDataIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/green"
        android:clickable="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView3_EditDataIncome">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="50dp"
            android:paddingTop="5dp"
            android:paddingEnd="50dp"
            android:paddingBottom="5dp"
            android:text="@string/Update"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_back_EditDataIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:backgroundTint="@color/gray"
        app:cardCornerRadius="25dp"
        app:cardElevation="16dp"
        app:layout_constraintStart_toStartOf="@+id/tv_dateTime_EditDataIncome"
        app:layout_constraintTop_toTopOf="@+id/cv_save_EditDataIncome">

