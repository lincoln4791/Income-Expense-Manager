<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context=".view.EditDataIncome">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_toolbar_EditDataIncome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/toolbarBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <ImageView
            android:id="@+id/iv_home_toolbar_EditDataIncome"
            style="@style/iv_toolBar"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_EditDataIncome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar_EditDataIncome" />


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_EditDataIncome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/ll_currentBalance_EditDataIncome"
            app:layout_constraintStart_toEndOf="@+id/iv_home_toolbar_EditDataIncome"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/EditIncome"
            app:titleTextColor="@color/white" />

        <LinearLayout
            android:id="@+id/ll_currentBalance_EditDataIncome"
            style="@style/ll_toolBar"
            android:orientation="vertical"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_currentBalanceText_toolBar_EditDataIncome"
                style="@style/tv_toolBar"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/redressed_regular"
                android:gravity="bottom|center"
                android:textAlignment="gravity"
                android:text="@string/CurrentBalance" />

            <TextView
                android:id="@+id/tv_currentBalanceValue_toolBar_EditDataIncome"
                style="@style/tv_toolBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top|center"
                android:textAlignment="gravity"
                android:text="@string/value" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <EditText
        android:id="@+id/et_incomeDescription_EditDataIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:maxLength="60"
        android:paddingStart="10dp"
        android:drawableLeft="@drawable/ic_money_bag"
        android:drawableRight="@drawable/ic_right_arrow"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="@string/IncomeDescription"
        app:layout_constraintTop_toBottomOf="@id/cl_toolbar_EditDataIncome" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2_EditDataIncome"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_incomeDescription_EditDataIncome">

        <LinearLayout
            android:id="@+id/ll_horizontalView_EditDataIncome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_salary_EditDataIncome"
                style="@style/CV_horizontalScroll_MainActivity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <ImageView
                        style="@style/iv_horizontalScroll_MainActivity"
                        android:layout_width="120dp"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:src="@drawable/salary" />

                    <TextView
                        style="@style/tv_horizontalScroll_MainActivity"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:text="@string/Salary"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_business_EditDataIncome"
                style="@style/CV_horizontalScroll_MainActivity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <ImageView
                        style="@style/iv_horizontalScroll_MainActivity"
                        android:layout_width="120dp"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:src="@drawable/business_profits" />

                    <TextView
                        style="@style/tv_horizontalScroll_MainActivity"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_weight="1"
                        android:text="@string/Business"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_houseRent_EditDataIncome"
                style="@style/CV_horizontalScroll_MainActivity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <ImageView
                        style="@style/iv_horizontalScroll_MainActivity"
                        android:layout_width="120dp"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:src="@drawable/house" />

                    <TextView
                        style="@style/tv_horizontalScroll_MainActivity"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_weight="1"
                        android:text="@string/HouseRent"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_other_EditDataIncome"
                style="@style/CV_horizontalScroll_MainActivity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <ImageView
                        style="@style/iv_horizontalScroll_MainActivity"
                        android:layout_width="120dp"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:src="@drawable/other" />

                    <TextView
                        style="@style/tv_horizontalScroll_MainActivity"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_weight="1"
                        android:text="@string/Other"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </HorizontalScrollView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2_EditDataIncome"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2_EditDataIncome"
        app:strokeColor="@color/green"
        app:strokeWidth="1dp">

        <EditText
            android:id="@+id/et_amount_EditDataIncome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:inputType="numberDecimal"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/ic_dollar"
            android:drawablePadding="10dp"
            android:hint="@string/EnterAmount" />


    </com.google.android.material.card.MaterialCardView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView3_EditDataIncome"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView2_EditDataIncome">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_amount500_EditDataIncome"
