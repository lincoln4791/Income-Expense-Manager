<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_weight="5"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="1dp"
    android:orientation="horizontal"
    android:layout_marginBottom="1dp"
    android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_dateTime_SampleFullReport"
                    style="@style/tv_data_FullReport"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="31/12/21 12:24"
                    android:textAlignment="viewStart" />


                <TextView
                    android:id="@+id/tv_type_SampleFullReport"
                    style="@style/tv_data_FullReport"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Expenses"
                    android:textAlignment="viewStart" />



                <TextView
                    android:id="@+id/tv_category_SampleFullReport"
                    style="@style/tv_data_FullReport"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Transport"
                  />



                <TextView
                    android:id="@+id/tv_amount_SampleFullReport"
                    style="@style/tv_data_FullReport"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="500000"
                />


</LinearLayout>