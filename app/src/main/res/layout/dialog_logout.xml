<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="24dp"
>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/white">

            <ImageView
                android:id="@+id/iv_alertImage_dialog_logout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_alert"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_alertImage_dialog_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/redressed_regular"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:text="@string/do_you_want_to_logout"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_alertImage_dialog_logout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_alertImage_dialog_logout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_alertImage_dialog_logout">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_no_alertImage_dialog_logout"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:fontFamily="@font/redressed_regular"
                    android:text="@string/no"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@+id/btn_no_alertImage_dialog_logout"
                    app:layout_constraintTop_toBottomOf="@id/tv_alertImage_dialog_logout" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_yes_alertImage_dialog_logout"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/red"
                    android:clickable="true"
                    android:textSize="10sp"
                    android:fontFamily="@font/redressed_regular"
                    android:text="@string/yes"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/btn_yes_alertImage_dialog_logout"
                    app:layout_constraintTop_toBottomOf="@id/tv_alertImage_dialog_logout" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>