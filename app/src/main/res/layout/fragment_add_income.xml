                    android:text="20000" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_amount30000_AddIncome"
                style="@style/CV_amounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/tv_amounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30000" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_amount40000_AddIncome"
                style="@style/CV_amounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/tv_amounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40000" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_amount50000_AddIncome"
                style="@style/CV_amounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/tv_amounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50000" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_amount100000_AddIncome"
                style="@style/CV_amounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/tv_amounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100000" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_amount200000_AddIncome"
                style="@style/CV_amounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/tv_amounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200000" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_amount300000_AddIncome"
                style="@style/CV_amounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/tv_amounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300000" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_amount400000_AddIncome"
                style="@style/CV_amounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/tv_amounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400000" />

            </com.google.android.material.card.MaterialCardView>

