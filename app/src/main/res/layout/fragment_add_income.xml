                android:id="@+id/cv_amount500000_AddIncome"
                style="@style/CV_amounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/tv_amounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500000" />

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tv_dateTime_AddIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/demoDate"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_schedule"
        android:drawablePadding="10dp"
        app:layout_constraintStart_toStartOf="@+id/horizontalScrollView3_AddIncome"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView3_AddIncome" />

    <TextView
        android:id="@+id/tc_changeDate_AddIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/ChangeDate"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/horizontalScrollView3_AddIncome"
        app:layout_constraintTop_toTopOf="@+id/tv_dateTime_AddIncome"
        android:visibility="gone"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_save_AddIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/green"
        app:cardCornerRadius="25dp"
        app:cardElevation="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tc_changeDate_AddIncome"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView3_AddIncome">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="50dp"
            android:paddingTop="5dp"
            android:paddingEnd="50dp"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:text="@string/Save"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_back_AddIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:backgroundTint="@color/gray"
        app:cardCornerRadius="25dp"
        app:cardElevation="16dp"
        app:layout_constraintStart_toStartOf="@+id/tv_dateTime_AddIncome"
        app:layout_constraintTop_toTopOf="@+id/cv_save_AddIncome">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="50dp"
            android:paddingTop="5dp"
            android:paddingEnd="50dp"
            android:textAlignment="center"
            android:paddingBottom="5dp"
            android:text="@string/Back"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_calculator_AddIncome"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:clickable="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/gray"
        app:cardCornerRadius="50dp"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cv_save_AddIncome"
        app:strokeColor="@color/red"
        app:strokeWidth="1dp"
        android:focusable="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/calculator_round" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>