<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_type_sampleIncomeExpense"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/red"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_type_sampleIncomeExpense"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/Expenses"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/cv_type_sampleIncomeExpense"
        app:layout_constraintEnd_toStartOf="@+id/tv_amount_sampleIncomeExpense"
        app:layout_constraintStart_toEndOf="@+id/cv_type_sampleIncomeExpense"
        app:layout_constraintTop_toTopOf="@+id/cv_type_sampleIncomeExpense">

        <TextView
            android:id="@+id/tv_date_sampleIncomeExpense"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|bottom"
            android:text="date"
            android:textSize="14sp"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/tv_cause_sampleIncomeExpense"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|top"
            android:text="cause"
            android:textSize="14sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_amount_sampleIncomeExpense"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/value"
        android:textColor="@color/green"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cv_type_sampleIncomeExpense"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cv_type_sampleIncomeExpense" />


</androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
