<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cv_topBar_MainActivity">
        <item name="android:clickable">true</item>
        <item name="cardElevation">16dp</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="tv_topBar_MainActivity">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
    </style>


    <style name="CV_horizontalScroll_MainActivity">
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">3dp</item>
        <item name="cardElevation">16dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="CV_amounts">
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cardElevation">16dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="tv_amounts">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
    </style>




    <style name="tv_horizontalScroll_MainActivity">

    </style>

    <style name="tv_topBar_Transactions">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="tv_data_Transactions">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="iv_horizontalScroll_MainActivity">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>



    <style name="cv_topBar_MonthlyExpenses">
        <item name="cardElevation">16dp</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="tv_topBar_MonthlyExpenses">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
    </style>


    <style name="tv_topLogo_MonthlyExpenses">
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">gravity</item>
    </style>


    <style name="cv_spinner_Monthly">
        <item name="cardElevation">16dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>





</resources>