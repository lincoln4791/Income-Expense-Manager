<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cv_topBar_MainActivity">
        <item name="android:clickable">true</item>
        <item name="cardElevation">16dp</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="tv_topBar_MainActivity">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
    </style>


    <style name="CV_horizontalScroll_MainActivity">

        <item name="android:layout_margin">3dp</item>
        <item name="cardElevation">16dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CV_amounts">
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cardElevation">16dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="tv_amounts">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
    </style>




    <style name="tv_horizontalScroll_MainActivity">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ll_horizontalScroll_MainActivity">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:weightSum">5</item>
    </style>

    <style name="tv_topBar_Transactions">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="tv_data_FullReport">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="iv_horizontalScroll_MainActivity">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_width">match_parent</item>
    </style>



    <style name="cv_topBar_MonthlyExpenses">
        <item name="cardElevation">16dp</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="tv_topBar_MonthlyExpenses">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
    </style>


    <style name="tv_topLogo_MonthlyExpenses">
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">gravity</item>
    </style>


    <style name="cv_spinner_FullReport">
        <item name="cardElevation">16dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>


    <style name="cv_categoryReportsExpenses_MonthlyReport">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="cardElevation">16dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="cardBackgroundColor">@color/pink</item>
    </style>


    <style name="tv_categoryReportsExpenses_MonthlyReport">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>

    </style>


    <style name="tv_categoryReportsExpensesPercentValue_MonthlyReport">
    <item name="android:textColor">@color/white</item>
    <item name="paddingEnd">10dp</item>
    <item name="paddingStart">10dp</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
    <item name="android:textAlignment">gravity</item>
    </style>


    <style name="tv_categoryReportsExpensesPercentSign_MonthlyReport">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="paddingStart">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
    </style>


    <style name="tv_categoryReportsExpensesValue_MonthlyReport">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
    </style>


    <style name="tv_monthlyCategoryWiseReport_MonthlyReport">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="tv_pieChartDetails_PieChart">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="iv_pieChartColorIndicator_PieChart">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:padding">1dp</item>
    </style>


    <style name="tv_splashActivityText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">60sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_toolBar">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ll_toolBar">
       <item name="android:layout_width">130dp</item>
       <item name="android:layout_height">match_parent</item>
    </style>


    <style name="iv_toolBar">
       <item name="android:layout_width">60dp</item>
       <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:padding">11dp</item>
        <item name="android:src">@drawable/ic_back24</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@drawable/selectior_all</item>
        <item name="android:focusable">false</item>

    </style>

    <style name="cv_backButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardBackgroundColor">@color/primary</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">100dp</item>
        <item name="android:focusable">true</item>
    </style>


</resources>