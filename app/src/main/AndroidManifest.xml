<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dailyexpensemanager">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DailyExpenseManager">
        <activity android:name=".view.TodaysTransactions"></activity>
        <activity android:name=".view.AllExpenses" />
        <activity android:name=".view.AllIncomes" />
        <activity android:name=".view.PieChart" />
        <activity android:name=".view.Monthly" />
        <activity android:name=".view.Daily" />
        <activity android:name=".view.Transactions" />
        <activity android:name=".view.AddExpense" />
        <activity android:name=".view.AddIncome" />
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>