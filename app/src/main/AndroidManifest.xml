<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lincoln4791.dailyexpensemanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/calculator24"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DailyExpenseManager">
        <activity
            android:name="com.lincoln4791.dailyexpensemanager.view.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name="com.lincoln4791.dailyexpensemanager.view.MonthlyCategoryWiseDetails" />
        <activity
            android:name="com.lincoln4791.dailyexpensemanager.view.MonthlyReport"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lincoln4791.dailyexpensemanager.view.EditDataExpense"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lincoln4791.dailyexpensemanager.view.EditDataIncome"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lincoln4791.dailyexpensemanager.view.PieChartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lincoln4791.dailyexpensemanager.view.FullReport"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lincoln4791.dailyexpensemanager.view.Daily"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lincoln4791.dailyexpensemanager.view.Transactions"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lincoln4791.dailyexpensemanager.view.AddExpense"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lincoln4791.dailyexpensemanager.view.AddIncome"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lincoln4791.dailyexpensemanager.view.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>