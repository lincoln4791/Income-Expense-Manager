<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dailyexpensemanager">

    <application
        android:allowBackup="true"
        android:icon="@drawable/calculator24"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DailyExpenseManager">
        <activity android:name=".view.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".view.MonthlyCategoryWiseDetails" />
        <activity
            android:name=".view.MonthlyReport"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.EditDataExpense"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.EditDataIncome"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.PieChartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.FullReport"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Daily"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Transactions"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.AddExpense"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.AddIncome"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.MainActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>